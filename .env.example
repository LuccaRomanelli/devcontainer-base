# ===========================================
# User Configuration for Dev Container
# ===========================================
# Copy this file to .env before starting:
#   cp .env.example .env

# -------------------------------------------
# Dotfiles Configuration
# -------------------------------------------
# Your personal dotfiles repository (leave empty to skip)
DOTFILES_REPO=
DOTFILES_BRANCH=main
# Packages to exclude from stow (comma-separated, no spaces)
DOTFILES_STOW_EXCLUDE=ghostty,waybar

# -------------------------------------------
# Git Configuration (optional, overrides ~/.gitconfig)
# -------------------------------------------
GIT_USER_NAME=
GIT_USER_EMAIL=

# -------------------------------------------
# Claude Code CLI
# -------------------------------------------
ANTHROPIC_API_KEY=

# -------------------------------------------
# Shell Preferences
# -------------------------------------------
DEFAULT_SHELL=zsh
TMUX_AUTO_START=true
TMUX_SESSION_NAME=main

# -------------------------------------------
# Mise (Runtime Version Manager)
# -------------------------------------------
MISE_AUTO_TRUST=true
